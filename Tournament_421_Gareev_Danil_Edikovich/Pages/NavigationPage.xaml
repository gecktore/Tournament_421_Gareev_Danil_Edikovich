<Page x:Class="Tournament_421_Gareev_Danil_Edikovich.Pages.NavigationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tournament_421_Gareev_Danil_Edikovich.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NavigationPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontSize="18">Авторизация</TextBlock>
            <TextBlock>Логин</TextBlock>
            <TextBox x:Name="LoginTb"/>
            <TextBlock>Пароль</TextBlock>
            <PasswordBox x:Name="PasswordPb"></PasswordBox>
            <Button Margin="5" x:Name="PlayerEnterBt" Content="Войти как участник" Click="PlayerEnterBt_Click"/>
            <Button Margin="5" x:Name="OrganizerEnterBt" Content="Войти как организатор" Click="OrganizerEnterBt_Click"/>
            <Button Margin="5" x:Name="RegBt" Content="Регистрация" Click="RegBt_Click"/>
            <Button Margin="5" x:Name="ViewerBt" Content="Продолжить как зритель" Click="RegBt_Click"/>
        </StackPanel>
    </Grid>
</Page>
