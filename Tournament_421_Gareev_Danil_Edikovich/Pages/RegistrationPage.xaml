<Page x:Class="Tournament_421_Gareev_Danil_Edikovich.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tournament_421_Gareev_Danil_Edikovich.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
            <TextBlock FontSize="30" Text="Регистрация"/>
            <TextBlock Text="Логин"/>
            <TextBox x:Name="LoginTb" Text="{Binding Login}" MaxLength="50" />
            <TextBlock Text="Пароль"/>
            <TextBox x:Name="PasswordPb" Text="{Binding Password}" MaxLength="50" />
            <CheckBox x:Name="UserTypeChb" Content="Участник (если не выбрано - организатор )"/>
            <Button x:Name="SaveBt" Content="Сохранить" Click="SaveBt_Click"/>
            <Button x:Name="ExitBt" Content="Выйти" Click="ExitBt_Click"/>
        </StackPanel>
    </Grid>
</Page>
